# OpenRouter API Configuration
OPENROUTER_API_KEY=sopenrouter_api_key
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Опциональные заголовки для OpenRouter
SITE_URL=https://your-domain.com
SITE_NAME=AI D&D Master

# Database
DATABASE_URL=./database/dnd.db

# Development
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# TURN Server (for WebRTC)
TURN_SERVER_URL=stun:localhost:3478
TURN_USERNAME=dnd
TURN_PASSWORD=dndpass

# API Configuration
API_TIMEOUT=30000
LOG_API_REQUESTS=true
MAX_RETRIES=3
RETRY_DELAY=1000

# Tool Calling Settings
ENABLE_TOOL_CALLING=true
MAX_TOOL_ITERATIONS=10

# D&D Master Settings
DM_MAX_TOKENS=1000
DM_TEMPERATURE=0.7
ASSISTANT_MAX_TOKENS=500
ASSISTANT_TEMPERATURE=0.3
